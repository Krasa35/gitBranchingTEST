{
    "name": "RTB - PathFinding",
    "privileged": true,
    "remoteUser": "rtb",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "rtb"
        }
    },
    "forwardPorts": [8000, 53000],
    "workspaceFolder": "/home/rtb",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ]
        }
    },
    "runArgs": [
        "--name",
        "rtb_pathfinding"
    ],
    "mounts": [
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/Resources,target=/home/rtb/Resources,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/RTB_toolbox,target=/home/rtb/RTB_toolbox,type=bind,consistency=cached"
    ],
    "containerEnv": {
        "DISPLAY": "unix:1"
    },
    "postCreateCommand": "pip install --user -r Resources/requirements.txt"
}
