{
    "name": "RTB - PathFinding",
    "privileged": true,
    "remoteUser": "rtb",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "rtb"
        }
    },
    "forwardPorts": [8000, 53000, 52000, 52001, 53001],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ]
        }
    },
    "runArgs": [
        "--name",
        "rtb_pathfinding"
    ],
    "postCreateCommand": "pip install --user -r /workspaces/robot_path_finding/Resources/requirements.txt"
}
